<%= form_for @user do |f| %>

	<% unless f.object.errors.empty? %>
	  <div class="alert alert-error">
	    <strong>Try again after fixing the following things:</strong><br/>
	    <ul>
	      <% f.object.errors.full_messages.each do |msg| %>
	        <li><%= msg %></li>
	      <% end %>
	    </ul>
	  </div>
	<% end %>

	<%= f.label :first_name %>
	<%= f.text_field :first_name %><br> 

	<%= f.label :last_name %>
	<%= f.text_field :last_name %><br> 

	<%= f.label :email %>
	<%=f.text_field :email %><br> 

	<%= f.label :password %>
	<%= f.text_field :password %>	<br> <br> 

	<%= f.submit "Create Account" %>		

<% end %>