<!DOCTYPE html>
<html>
<head>
  <title>Crowdfunder</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>
<body>


<%= render 'layouts/shared/nav' %>


<div class="container">

	<% if flash[:notice] %>
	<div class="success">
	  <p class="text-success"><%= flash[:notice] %></p>
	</div>  
	<% end %>


	<% if flash[:alert] %>
	<div class="alert">
	  <p class="text-error"><%= flash[:alert] %></p>
	</div>  
	<% end %>
<%= yield %>
</div>

</body>
</html>
